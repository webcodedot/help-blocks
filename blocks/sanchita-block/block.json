{
    "apiVersion": 2,
    "name": "older-people-gutenberg-blocks/sanchita-block",
    "version": "1.0",
    "title": "Sanchita Block",
    "category": "older-people-gutenberg-blocks",
    "icon": "admin-media",
    "description": "An accordion block with default items. The active accordion opens to the right with media items on the left side and a title on the right side.",
    "supports": {
        "html": false,
        "anchor": true,
        "align": ["full", "wide"],
        "innerBlocks": true
    },
    "attributes": {
        "accordions": {
            "type": "array",
            "default": [
                {
                    "title": "Accordion 1",
                    "media": [
                        { "type": "video", "url": "", "title": "", "description": "" },
                        { "type": "video", "url": "", "title": "", "description": "" },
                        { "type": "video", "url": "", "title": "", "description": "" },
                        { "type": "video", "url": "", "title": "", "description": "" }
                    ],
                    "content": "Content for Accordion 1"
                }
            ]
        },
        "activeAccordion": {
            "type": "number",
            "default": 0
        },
        "titleColor": {
            "type": "string",
            "default": "#000000"
        },
        "titleFontSize": {
            "type": "string",
            "default": "16px"
        },
        "titleFontWeight": {
            "type": "string",
            "default": "400"
        },
       
        "mediaDescriptionColor": {
            "type": "string",
            "default": "#000000"
        },
        "mediaDescriptionFontSize": {
            "type": "string",
            "default": "14px"
        },
        "mediaDescriptionFontWeight": {
            "type": "string",
            "default": "400"
        },
        "rightColumnBgColor": {
            "type": "string",
            "default": "#ffffff"
        },
		"align": {
			"type": "string",
			"default": "wide"
		}
    },
    "textdomain": "older-people-gutenberg-blocks",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
