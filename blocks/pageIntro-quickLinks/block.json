{
	"apiVersion": 2,
	"name": "create-block/pageintro-quicklinks",
	"title": "Page Intro with Quick Links",
	"category": "widgets",
	"icon": "smiley",
	"description": "A block that displays a title, paragraph, and multiple buttons on the left, with a list of links on the right.",
	"attributes": {
	  "title": {
		"type": "string",
		"source": "html",
		"selector": "h2"
	  },
	  "titleColor": {
		"type": "string"
	  },
	  "titleFontSize": {
		"type": "number",
		"default": 24
	  },
	  "rightColumnTitle": {
		"type": "string",
		"source": "html",
		"selector": ".right-column h3"
	  },
	  "rightColumnTitleColor": {
		"type": "string"
	  },
	  "rightColumnTitleFontSize": {
		"type": "number",
		"default": 20
	  },
	  "paragraph": {
		"type": "string",
		"source": "html",
		"selector": "p"
	  },
	  "paragraphColor": {
		"type": "string",
		"default": "#25076B"
	  },
	  "paragraphFontSize": {
		"type": "number",
		"default": 16
	  },
	  "buttons": {
		"type": "array",
		"default": [
		  {
			"text": "Read More",
			"url": "#",
			"backgroundColor": "#007cba",
			"textColor": "#ffffff"
		  }
		],
		"source": "query",
		"selector": ".button-container a",
		"query": {
		  "text": {
			"type": "string",
			"source": "html",
			"selector": "a"
		  },
		  "url": {
			"type": "string",
			"source": "attribute",
			"attribute": "href",
			"selector": "a"
		  },
		  "backgroundColor": {
			"type": "string"
		  },
		  "textColor": {
			"type": "string",
			"default": "#ffffff"
		  }
		}
	  },
	  "leftButtons": {
		"type": "array",
		"default": [
		  {
			"text": "Left Button",
			"url": "#",
			"backgroundColor": "#25076B",
			"textColor": "#ffffff"
		  }
		],
		"source": "query",
		"selector": ".left-column .button-container a",
		"query": {
		  "text": {
			"type": "string",
			"source": "html",
			"selector": "a"
		  },
		  "url": {
			"type": "string",
			"source": "attribute",
			"attribute": "href",
			"selector": "a"
		  },
		  "backgroundColor": {
			"type": "string"
		  },
		  "textColor": {
			"type": "string",
			"default": "#ffffff"
		  }
		}
	  },
	  "buttonBackgroundColor": {
		"type": "string",
		"default": "#25076B"
	  },
	  "buttonTextColor": {
		"type": "string",
		"default": "#ffffff"
	  },
	  "buttonTextSize": {
		"type": "number",
		"default": 16
	  },
	  "links": {
		"type": "array",
		"default": [
		  {"text": "Default Link 1", "url": "#"},
		  {"text": "Default Link 2", "url": "#"},
		  {"text": "Default Link 3", "url": "#"},
		  {"text": "Default Link 4", "url": "#"},
		  {"text": "Default Link 5", "url": "#"},
		  {"text": "Default Link 6", "url": "#"},
		  {"text": "Default Link 7", "url": "#"}
		],
		"source": "query",
		"selector": ".links-container li",
		"query": {
		  "text": {
			"type": "string",
			"source": "html",
			"selector": "a"
		  },
		  "url": {
			"type": "string",
			"source": "attribute",
			"attribute": "href",
			"selector": "a"
		  }
		}
	  },
	  "leftColumnBgColor": {
		"type": "string",
		"default": "#ffffff"
	  },
	  "rightColumnBgColor": {
		"type": "string",
		"default": "#CECDF0"
	  },
	  "rightColumnTextColor": {
		"type": "string",
		"default": "#25076B"
	  },
	  "rightColumnTextSize": {
		"type": "number",
		"default": 16
	  },
	  "align": {
		  "type": "string",
		  "default": "full"
	  }
	},
	"supports": {
	  "align": ["full", "width"]
	},

	"textdomain": "pageintro-quicklinks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style-index.css"
  }